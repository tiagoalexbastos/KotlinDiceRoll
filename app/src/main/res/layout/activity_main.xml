<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tiago.kotlin.com.kotlindiceroll.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/first_dice"
                android:layout_width="@dimen/square_dimensions"
                android:layout_height="@dimen/square_dimensions"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:clickable="false"
                android:backgroundTint="@android:color/holo_green_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/second_dice"
                android:layout_width="@dimen/square_dimensions"
                android:layout_height="@dimen/square_dimensions"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:clickable="false"
                android:backgroundTint="@android:color/holo_red_light"/>
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:layout_marginTop="60dp"
        android:id="@+id/rollme"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="@string/roll_text" />


</LinearLayout>


